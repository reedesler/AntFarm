{
  "name": "AntFarm",
  "version": "0.0.0",
  "repository": "https://github.com/reedesler/AntFarm.git",
  "author": "Reed <reedesler+github@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@types/blessed": "^0.1.10",
    "@types/node": "^10.3.0",
    "blessed": "^0.1.81",
    "node-gameloop": "^0.1.4",
    "nodemon": "^1.17.5",
    "perlin-simplex": "^0.0.3",
    "ts-node": "^6.0.5"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "start": "tsc && yarn tslint && yarn deploy",
    "deploy": "ts-node src/index.ts",
    "watch": "yarn tslint && nodemon",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "pretty": "prettier --single-quote --trailing-comma es5 --print-width 100 --write src/**/*",
    "precommit": "lint-staged",
    "test": "jest --forceExit --verbose"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix"
    ],
    "*.{ts,js,json,md}": [
      "prettier --single-quote --trailing-comma es5 --print-width 100 --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "yarn deploy"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.test.(ts|js|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  }
}
